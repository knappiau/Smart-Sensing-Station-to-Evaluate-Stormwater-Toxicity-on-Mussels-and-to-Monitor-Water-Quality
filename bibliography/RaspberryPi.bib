	journal = {Acta Astronaut.},
	author = {Honess, David and Quinlan, Oliver},
	month = sep,
	year = {2017},
	note = {WOS:000408290900005},
	keywords = {Coding, Computing, education, Peake, Programming, stem},
	pages = {43--52}
}

@article{bustamante_smart_2017,
	title = {Smart {Thermostats}: {An} {Experimental} {Facility} to {Test} {Their} {Capabilities} and {Savings} {Potential}},
