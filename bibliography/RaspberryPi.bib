	keywords = {agricultural images, artificial neural-network, color, features, Fuzzy real time classifier, identification, Image classification, Leaf textures, Machine   learning, Morphological operators, Python programming, Raspbian   operating system, Rotation invariance, system},
	pages = {160--171}
